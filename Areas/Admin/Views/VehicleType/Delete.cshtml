@model VehicleType
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/images/bgImage/bgi (6).jpg");
            background-size: cover;

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-uppercase text-center">Delete Vehicle Type</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 border-5 border">
                <form method="post" enctype="multipart/form-data">
                    <input asp-for="@Model.Id" hidden />
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label"></label>
                        <input asp-for="@Model.Name" class="form-control" disabled />

                    </div>
                    <div class="mb-3">
                        <a asp-area="Admin" asp-controller="VehicleType" asp-action="Index" class="btn btn-warning">back</a>
                        <button type="submit" class="btn btn-danger" style="Width:150px">Delete</button>

                    </div>
                </form>
            </div>

        </div>
    </div>

   

</body>
</html>
