@model Brand
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/images/bgImage/bgi (18).jpg");
            background-size: cover;

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-uppercase text-center text-white">Edit Brands</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 border-5">
                <form method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label text-white"></label>
                        <input asp-for="@Model.Name" class="form-control" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.EstablishedYear" class="form-label text-white"></label>
                        <input asp-for="@Model.EstablishedYear" class="form-control" />
                        <span asp-validation-for="@Model.EstablishedYear" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.BrandLogo" class="form-label text-white"></label>
                        <input type="file" name="files" id="uploadBox" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">back</a>
                        <button type="submit" class="btn btn-warning" style="Width:150px">Update</button>

                    </div>
                </form>
            </div>
            <div class="col-md-4">
                @if (Model.BrandLogo != null)
                {
                    <img src="@Model.BrandLogo" width="100%" />
                }
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
   
</body>
</html>
