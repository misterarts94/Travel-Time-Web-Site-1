@using TopSpeed.Domain.ApplicationEnums
@using TopSpeed.Domain.ViewModel
@model CustomerDetailsVM

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/images/bgImage/bg1 (7).jpg");
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header text-center text-uppercase">
                Post Details
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">                     
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong> Name</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.Name</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Brand Name</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.Brand.Name</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Vehicle Type</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.VehicleType.Name</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Engine / Fuel Type</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @((EngineAndFuelType)Model.Post.EngineAndFuelType)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Transmission</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @((Transmission)Model.Post.Transmission)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Engine</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.Engine / CC</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Top Speed</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.TopSpeed / Kmph</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Mileage</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.Mileage / Liter</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Range </strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.Range/ KM</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Sheating Capacity</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.SeatingCapacity / person</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Base Price</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.PriceFrom.ToString("c")</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Top-end Price</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.PriceTo.ToString("c")</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="card-text text-uppercase"><strong>Ratings</strong></p>

                            </div>
                            <div class="col-md-8">
                                <p class="card-text">: @Model.Post.Ratings / 5</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.Post.VehicleImage" width="100%" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <a href="@Url.Action("GoBack","Home",new { page = ViewBag.CurrentPage})" class="btn btn-danger">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    @if(Model.Posts.Count > 0)
    {
        <h5 class="text-secondary">You May Also Like This</h5>
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Posts)
                {
                    <div class="col-md-4 margin-bottom:20px" class="spinner-border text-success">
                        <div clss=" card-border-2  border-dark shadow md-5 bg-white rounded">
                            <div class="card-header">
                                <img src="@item.VehicleImage" height="500px" width="100%" />
                            </div>
                            <div class="cart-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-primary text-uppercase" style="font-weight:bold">@item.Name</h6>
                                        <p class=" text-uppercase" style="font-weight:bold;color:red"><span>@item.PriceFrom.ToString("c")</span></p>
                                        <a class="btn btn-success" href="@Url.Action("Details","Home",new {id = item.Id,page = ViewBag.CurrentPage})">Details</a>

                                    </div>
                                    <div class="col text-end ">
                                        <img src="@item.Brand.BrandLogo" width="60px" height="60px" class="spinner-border text-success" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }



</body>
</html>