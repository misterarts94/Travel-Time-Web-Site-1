@using TopSpeed.Application.ApplicationConstants;
@{
    string[] roles = { CustomRole.MasterAdmin, CustomRole.Admin };
    bool isInMultipleRoles = roles.Any(role => User.IsInRole(role)); // Corrected typo: isInMultipleRoles
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Times</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TopSpeed.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
    <style>
        body {
            
            background-repeat: no-repeat; /* or repeat, repeat-x, repeat-y */
            /* Add other background styles as desired (position, attachment, etc.) */
        }
       
    </style>
</head>
<body>

    <div class="overlay"></div> @* Optional overlay *@

    <partial name="_Notification" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent  box-shadow mb-lg-5 ">
            <div class="container-fluid">
                <a class="navbar-brand justify-content-lg-evenly" asp-area="Customer" asp-controller="Home" asp-action="Index"><i class="bi bi-car-front-fill"></i> Travel Times <i class="bi bi-speedometer"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-md-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black text-uppercase" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (isInMultipleRoles) // Corrected variable name
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-black" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item text-black text-uppercase" asp-area="Admin" asp-controller="Brand" asp-action="Index">Brand</a></li>
                                    <li><a class="dropdown-item text-black text-uppercase" asp-area="Admin" asp-controller="VehicleType" asp-action="Index">Vehicle Type</a></li>
                                    <li><a class="dropdown-item text-black text-uppercase" asp-area="Admin" asp-controller="Post" asp-action="Index">Post</a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <!-- Full-width Footer -->
    
    <div class="container-fluid">
        <!-- Footer -->
        <footer class="text-center text-lg-start text-black"
                style="background-color:darkgray">
            <!-- Grid container -->
            <div class="container p-5 pb-2">
                <!-- Section: Links -->
                <section class="">
                    <!--Grid row-->
                    <div class="row">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">
                               Need For Speed
                            </h6>
                            <p>
                                Here you can use rows and columns to organize your footer
                                content. Lorem ipsum dolor sit amet, consectetur adipisicing
                                elit.
                            </p>
                        </div>
                        <!-- Grid column -->

                        <hr class="w-100 clearfix d-md-none" />

                        <!-- Grid column -->
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">Products</h6>
                            <p class="text-black">
                                 Cars
                            </p>
                            <p class="text-black">
                                Trucks
                            </p>
                            <p class="text-black">
                                Bikes
                            </p>
                            <p class="text-black">
                                     Flights
                            </p>
                        </div>
                        <!-- Grid column -->

                        <hr class="w-100 clearfix d-md-none" />

                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">
                                Useful links
                            </h6>
                            <p>
                                <a class="text-black">Your Account</a>
                            </p>
                            <p>
                                <a class="text-black">Shipping Rates</a>
                            </p>
                            <p>
                                <a class="text-black">Service</a>
                            </p>
                            <p>
                                <a class="text-black">Help</a>
                            </p>
                        </div>

                        <!-- Grid column -->
                        <hr class="w-100 clearfix d-md-none" />

                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                            <h6 class="text-uppercase mb-4 font-weight-bold">Contact</h6>
                            <p class="text-success" ><i class="fas fa-home mr-3"></i>India</p>
                            <p class ="text-success"><i class="fas fa-envelope mr-3"></i>kalaiselvan1114@gmail.com</p>
                            <p class="text-success"><i class="fas fa-phone mr-3"></i> +91 6369637471</p>
                            <p class="text-success"><i class="fas fa-print mr-3"></i> +91 7708482706</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!--Grid row-->
                </section>
                <!-- Section: Links -->

                <hr class="my-3">

                <!-- Section: Copyright -->
                <section class="p-3 pt-0">
                    <div class="row d-flex align-items-center">
                        <!-- Grid column -->
                        <div class="col-md-7 col-lg-8 text-center text-md-start">
                            <!-- Copyright -->
                            <div class="p-3">
                                © 2020 Copyright:
                                <a class="text-info" href="https://learn.microsoft.com/aspnet/core">TravelTime GetSpeed</a>
                            </div>
                            <!-- Copyright -->
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-5 col-lg-4 ml-lg-0 text-center text-md-end">
                            <!-- Facebook -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="fab fa-facebook-f"></i>
                            </a>

                            <!-- Twitter -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="fab fa-twitter"></i>
                            </a>

                            <!-- Google -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="fab fa-google"></i>
                            </a>

                            <!-- Instagram -->
                            <a class="btn btn-outline-light btn-floating m-1"
                               class="text-white"
                               role="button">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                        <!-- Grid column -->
                    </div>
                </section>
                <!-- Section: Copyright -->
            </div>
            <!-- Grid container -->
        </footer>
        <!-- Footer -->
    </div>
    <!-- End of .container -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
